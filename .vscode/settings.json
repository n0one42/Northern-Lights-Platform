// Northern-Lights-Platform/.vscode/settings.json
{
  // =================================================================================
  // General Editor & Formatting Settings
  // Enforces a consistent, readable style for all project files.
  // =================================================================================
  "editor.rulers": [160],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.encoding": "utf8",
  "files.eol": "\n",

  // --- Automation on Save ---
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // =================================================================================
  // Language-Specific Settings
  // Defines default formatters and editor behavior for specific file types.
  // =================================================================================

  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jinja-yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false // Whitespace can be significant in Markdown
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // =================================================================================
  // Extension-Specific Settings
  // Fine-tunes extensions that relate to code style and quality.
  // =================================================================================

  // --- Prettier - Code formatter (esbenp.prettier-vscode) ---
  // A single, project-wide Prettier config is a best practice.
  "prettier.configPath": ".prettierrc.json"
}
