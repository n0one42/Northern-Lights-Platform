---
# Northern-Lights-Platform/ansible/.yamllint
# YAMLlint configuration for Ansible files
# Complements ansible-lint for comprehensive YAML validation

extends: default

rules:
  # Line length aligned with other tools
  line-length:
    max: 120
    level: warning
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  # Comments formatting
  comments:
    min-spaces-from-content: 1 # Require 1 spaces before inline comments (matches the hardcoded prettier rule)
    require-starting-space: true

  # Comments indentation - disabled for ansible-lint compatibility
  comments-indentation: false

  # Indentation rules - consistent 2 spaces
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Bracket spacing - aligned with Prettier
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Braces spacing - adjusted for ansible-lint compatibility
  braces:
    min-spaces-inside: 0 # Changed from 1 to 0 for ansible-lint
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Colons - consistent formatting
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  # Commas - consistent formatting
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  # Hyphens - consistent list formatting
  hyphens:
    max-spaces-after: 1

  # Truthy values - allow Ansible-style booleans
  truthy:
    allowed-values: ["true", "false", "yes", "no", "True", "False", "YES", "NO"]
    check-keys: false

  # Document rules - require --- for Ansible files
  document-start:
    present: true
    level: warning

  # Document end
  document-end:
    present: false

  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1

  # Key ordering - flexibility for logical grouping
  key-ordering: disable

  # Key duplicates - prevent errors
  key-duplicates: enable

  # Octal values
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true # Changed to true for ansible-lint compatibility

  # Trailing spaces
  trailing-spaces: enable

  # New line at end of file
  new-line-at-end-of-file: enable

  # Quoted strings - enforce double quotes for consistency with Prettier
  quoted-strings:
    quote-type: double
    required: false

  # Empty values in mappings
  empty-values:
    forbid-in-block-mappings: false
    forbid-in-flow-mappings: true

# Ignore paths
ignore: |
  .venv/
  .git/
  .ansible_facts_cache/
  .cache/
  collections/
  *.retry
  molecule/
